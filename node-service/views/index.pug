extends layout

block content

        #login.center-vertical
                form.well(id='form-login', method='post')
                        h2 Please Login
                        .form-group
                                label Username
                                input.form-control(type='text', id='user-tf', name='user')
                        .form-group
                                label Password
                                input.form-control(type='password', id='pass-tf', name='pass')
                        .controls
                                button(type='button').btn.btn-default.button-rememember-me
                                        span.glyphicon.glyphicon-unchecked.button-rememember-me-glyph
                                        | Remember Me
                                button(type='submit').btn.btn-primary.button-sign-in
                                        span.glyphicon.glyphicon-lock
                                        | Sign In
                        .clearfix
                        hr
                        .btm-links
                        .clearfix

        include modals/alert

block scripts
        script(type='text/javascript' src='/jquery/dist/jquery.min.js')
        script(type='text/javascript' src='/jquery-form/dist/jquery.form.min.js')
        script(type='text/javascript' src='/jquery.cookie/jquery.cookie.js')
        script(type='text/javascript' src='/axios/dist/axios.min.js')
        script(src='/js/views/login.js')
